#!/bin/bash
# Git pre-commit hook
# 在提交前自动运行代码检查

set -e

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}========================================${NC}"
echo -e "${BLUE}  运行 pre-commit 检查${NC}"
echo -e "${BLUE}========================================${NC}"
echo ""

# 获取暂存的文件
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}✅ 没有 Go 文件需要检查${NC}"
    exit 0
fi

echo -e "${YELLOW}检查的文件:${NC}"
echo "$STAGED_FILES" | sed 's/^/  /'
echo ""

# 1. 代码格式化检查
echo -e "${YELLOW}[1/4] 检查代码格式...${NC}"
UNFORMATTED=$(echo "$STAGED_FILES" | xargs gofmt -l 2>/dev/null || true)
if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}❌ 代码格式不符合规范:${NC}"
    echo "$UNFORMATTED" | sed 's/^/  /'
    echo -e "${YELLOW}运行 'make fmt' 或 'gofmt -w .' 修复${NC}"
    exit 1
fi
echo -e "${GREEN}✅ 代码格式检查通过${NC}"
echo ""

# 2. go vet 检查
echo -e "${YELLOW}[2/4] 运行 go vet...${NC}"
if ! go vet ./... 2>&1; then
    echo -e "${RED}❌ go vet 检查失败${NC}"
    exit 1
fi
echo -e "${GREEN}✅ go vet 检查通过${NC}"
echo ""

# 3. golangci-lint 检查（如果已安装）
echo -e "${YELLOW}[3/4] 运行 golangci-lint...${NC}"
if command -v golangci-lint &> /dev/null; then
    if ! golangci-lint run --timeout=5m 2>&1; then
        echo -e "${RED}❌ golangci-lint 检查失败${NC}"
        exit 1
    fi
    echo -e "${GREEN}✅ golangci-lint 检查通过${NC}"
else
    echo -e "${YELLOW}⚠️  golangci-lint 未安装，跳过${NC}"
    echo -e "${YELLOW}   安装: go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest${NC}"
fi
echo ""

# 4. 运行相关测试（只运行修改文件的测试）
echo -e "${YELLOW}[4/4] 运行相关测试...${NC}"
# 获取修改文件所属的包
PACKAGES=$(echo "$STAGED_FILES" | xargs -n1 dirname | sort -u | sed 's|^\./||' | grep -v '^$' || true)

if [ -n "$PACKAGES" ]; then
    # 只运行有测试文件的包的测试
    TEST_PACKAGES=""
    for pkg in $PACKAGES; do
        if find "$pkg" -name '*_test.go' -type f 2>/dev/null | grep -q .; then
            TEST_PACKAGES="$TEST_PACKAGES ./$pkg"
        fi
    done

    if [ -n "$TEST_PACKAGES" ]; then
        if ! go test -short $TEST_PACKAGES 2>&1; then
            echo -e "${RED}❌ 测试失败${NC}"
            exit 1
        fi
        echo -e "${GREEN}✅ 测试通过${NC}"
    else
        echo -e "${YELLOW}⚠️  没有找到相关测试${NC}"
    fi
else
    echo -e "${YELLOW}⚠️  无法确定测试包，跳过${NC}"
fi
echo ""

echo -e "${GREEN}========================================${NC}"
echo -e "${GREEN}  ✅ Pre-commit 检查全部通过！${NC}"
echo -e "${GREEN}========================================${NC}"

exit 0
